<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btnlocation"
            android:background="#fafafa"
            android:src="@drawable/ic_near_me_black_24dp"
            android:layout_weight="2"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:gravity="center"
            android:id="@+id/dateday"
            android:fontFamily="@font/notosanshk_bold"
            android:text="Thursday, June 9"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btncity"
            android:background="#fafafa"
            android:src="@drawable/ic_location_city"
            android:layout_weight="2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:padding="5dp"
            android:gravity="center"
            android:textColor="#000"
            android:textAllCaps="true"
            android:fontFamily="@font/lato_black"
            android:id="@+id/cityname"
            android:textStyle="bold"
            android:letterSpacing="0.4"
            android:text="bangalore,IN"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="5dp"
            android:fontFamily="@font/sourcesanspro_semibold"
            android:id="@+id/citydesc"
            android:letterSpacing="0.4"
            android:textStyle="normal"
            android:textAllCaps="true"
            android:text="SCATTERED CLOUDS"
            />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/cityicon"
            android:layout_marginTop="7dp"
            android:src="@drawable/ic_cloud_queue_black_24dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="60sp"
            android:gravity="center"
            android:textColor="#000"
            android:fontFamily="@font/montserrat_regular"
            android:id="@+id/citytemp"
            android:letterSpacing="0.05"
            android:text="30째"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:gravity="end"
                android:paddingEnd="10dp"
                android:paddingStart="0dp"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="max"
                    android:textColor="#3E3E3E"
                    android:fontFamily="@font/notosanshk_regular"
                    android:padding="7dp"
                    android:gravity="center"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="32째"
                    android:padding="7dp"
                    android:id="@+id/maxtemp"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:layout_weight="1"/>

            </LinearLayout>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="#8A8A8A"/>

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:paddingEnd="0dp"
                android:paddingStart="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="min"
                    android:textColor="#3E3E3E"
                    android:fontFamily="@font/notosanshk_regular"
                    android:padding="7dp"
                    android:gravity="center"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="29째"
                    android:padding="7dp"
                    android:id="@+id/mintemp"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:layout_weight="1"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:gravity="end"
                android:paddingEnd="10dp"
                android:paddingStart="0dp"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Feels Like"
                    android:textColor="#3E3E3E"
                    android:fontFamily="@font/notosanshk_regular"
                    android:padding="7dp"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="30.34째"
                    android:letterSpacing="0.1"
                    android:id="@+id/feelslike"
                    android:padding="7dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:layout_weight="1"/>

            </LinearLayout>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:padding="18dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="#8A8A8A"/>

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:paddingEnd="0dp"
                android:paddingStart="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Pressure"
                    android:textColor="#3E3E3E"
                    android:fontFamily="@font/notosanshk_regular"
                    android:padding="7dp"
                    android:gravity="center"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="200Pa"
                    android:id="@+id/pressure"
                    android:padding="7dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:layout_weight="1"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:gravity="end"
                android:paddingEnd="10dp"
                android:paddingStart="0dp"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Sunrise"
                    android:textColor="#3E3E3E"
                    android:fontFamily="@font/notosanshk_regular"
                    android:padding="7dp"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="5:54AM"
                    android:letterSpacing="0.1"
                    android:id="@+id/sunrise"
                    android:padding="7dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:layout_weight="1"/>

            </LinearLayout>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:padding="18dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="#8A8A8A"/>

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:paddingEnd="0dp"
                android:paddingStart="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Sunset"
                    android:textColor="#3E3E3E"
                    android:fontFamily="@font/notosanshk_regular"
                    android:padding="7dp"
                    android:gravity="center"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="6:54PM"
                    android:letterSpacing="0.1"
                    android:id="@+id/sunset"
                    android:padding="7dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:layout_weight="1"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:gravity="end"
                android:paddingEnd="10dp"
                android:paddingStart="0dp"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Wind Speed"
                    android:textColor="#3E3E3E"
                    android:fontFamily="@font/notosanshk_regular"
                    android:padding="7dp"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="4.5m/s"
                    android:letterSpacing="0.1"
                    android:padding="7dp"
                    android:id="@+id/windspeed"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:layout_weight="1"/>

            </LinearLayout>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:padding="18dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="#8A8A8A"/>

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:paddingEnd="0dp"
                android:paddingStart="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Humidity"
                    android:textColor="#3E3E3E"
                    android:fontFamily="@font/notosanshk_regular"
                    android:padding="7dp"
                    android:gravity="center"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="80%"
                    android:letterSpacing="0.1"
                    android:id="@+id/humidity"
                    android:padding="7dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>